<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center"> Edit <%=campground.name%> Comment</h1>
    <div class="campForm">
        <form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds/<%=campground._id%>">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>